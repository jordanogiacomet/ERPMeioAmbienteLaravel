<?xml version="1.0"?>
<ruleset name="Laravel Project Rules">
    <description>Custom coding standards for Laravel project</description>

    <rule ref="PSR12"/>
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="150"/>
        </properties>
    </rule>

    <file>app</file>
    <file>routes</file>
</ruleset>
